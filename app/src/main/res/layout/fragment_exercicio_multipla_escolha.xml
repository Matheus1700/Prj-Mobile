<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.ExercicioMultiplaEscolha">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_pergunta"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:id="@+id/texto_pergunta"
            android:layout_width="366dp"
            android:layout_height="178dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="16dp"
            android:text="Texto exemplo"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.428"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.111" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_resposta"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:background="#33FF57"
        android:orientation="vertical"
        android:translationZ="999dp">

        <Button
            android:id="@+id/alternativa_4"
            android:layout_width="382dp"
            android:layout_height="56dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:gravity="left"
            android:text="TextView4"
            app:cornerRadius="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.285"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.835" />

        <Button
            android:id="@+id/alternativa_3"
            android:layout_width="382dp"
            android:layout_height="56dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="180dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="26dp"
            android:gravity="left"
            android:text="TextView3"
            app:cornerRadius="5dp"
            app:layout_constraintBottom_toTopOf="@+id/alternativa_4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.357" />

        <Button
            android:id="@+id/alternativa_2"
            android:layout_width="382dp"
            android:layout_height="56dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="108dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="28dp"
            android:gravity="left"
            android:text="TextView2"
            app:cornerRadius="5dp"
            app:layout_constraintBottom_toTopOf="@+id/alternativa_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.375" />

        <Button
            android:id="@+id/alternativa_1"
            android:layout_width="382dp"
            android:layout_height="56dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="28dp"
            android:gravity="left"
            android:text="TextView1"
            app:cornerRadius="5dp"
            app:layout_constraintBottom_toTopOf="@+id/alternativa_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.444" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="112dp"
            android:layout_height="36dp"
            android:layout_marginStart="149dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="150dp"
            android:layout_marginBottom="8dp"
            android:text="Ok"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/alternativa_4"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>